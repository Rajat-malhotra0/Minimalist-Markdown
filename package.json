{
  "name": "minimalist-markdown-editor",
  "version": "1.0.0",
  "description": "A minimalist markdown editor with split-pane view",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "pack": "electron-builder --dir",
    "dist": "electron-builder"
  },
  "keywords": [
    "markdown",
    "editor",
    "electron",
    "minimalist"
  ],
  "author": "Rajat Malhotra",
  "license": "ISC",
  "devDependencies": {
    "electron": "^39.2.7",
    "electron-builder": "^25.1.8",
    "highlight.js": "^11.11.1",
    "marked": "^17.0.1"
  },
  "build": {
    "appId": "com.rajat.minimalistmarkdown",
    "productName": "Minimalist Markdown",
    "copyright": "Copyright Â© 2026 Rajat Malhotra",
    "directories": {
      "output": "dist"
    },
    "win": {
      "target": [
        "nsis",
        "portable"
      ],
      "icon": "src/assets/icon.png"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true
    },
    "mac": {
      "target": "dmg",
      "icon": "src/assets/icon.png"
    },
    "linux": {
      "target": "AppImage",
      "icon": "src/assets/icon.png",
      "category": "Office"
    }
  }
}
